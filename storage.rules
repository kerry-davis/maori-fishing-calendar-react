rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow each authenticated user to read/write only their own files
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Optional public area (if you ever host public assets)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
